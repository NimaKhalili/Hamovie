<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="black">#262A35</color>
    <color name="blue">#217CF3</color>
    <color name="darkGray">#B3B6BE</color>
    <color name="gray">#EFEFEF</color>
    <color name="ic_launcher_background">#FFFFFF</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">هامووی</string>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@android:style/Theme.Material.Light.NoActionBar</item>

        <item name="android:windowSplashScreenIconBackgroundColor" ns1:targetApi="s">@color/white</item>
    </style>
    <style name="Theme.Hamovie" parent="Theme.MaterialComponents.DayNight">
        
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Actionbar</item>
        
        <item name="android:statusBarColor">@color/blue</item>
        <item name="fontFamily">@font/primary_regular</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="dividerColor">@color/gray</item>
        <item name="android:textColorSecondary">@color/darkGray</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="ThemeOverlay.Actionbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>